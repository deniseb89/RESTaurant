<div class="content">
	<h2>
		Receipt
	</h2>

	<h3>
		for Table <%= @party.table_number %>
	</h3>

	<h4>
		<%= Time.now.strftime("on %m/%d/%Y at %I:%M%p") %>
	</h4>

	<table class="receipt" width="50%" cellspacing="3">
		<tr>
			<th colspan="2">
				Food Ordered
			</th>
			<th>
				Price
			</th>
		</tr>
		<% total = 0 %>
		<% @party.foods.each do |food| %>	
			<tr>
				<td colspan="2">
					<%= food.name %>
				</td>
				<td>
					$<%= food.price.round(2) %>
				</td>
			</tr>
		<% total += food.price %>	
		<% end %>
		<tr>
			<th colspan="2">
				TOTAL
			</th>
			<th>
				$<%= total.round(2) %>
			</th>
		</tr>
		<tr>
			<th colspan="3">
				Tip Suggestions
			</th>
		</tr>	
		<tr>
			<td>
				15% = $<%= (total * 0.15).round(2) %>
			</td>
			<td>
				20% = $<%= (total * 0.2).round(2) %>
			</td>
			<td>
				25% = $<%= (total * 0.25).round(2) %>
			</td>
		</tr>
	</table>

	<h5>
		Thank you! Come again!
	</h5>	
</div>

<footer>
	<a class="nav" href="javascript:if(window.print)window.print()">Print</a>
	<a class="nav" href="/">Home</a>
</footer>